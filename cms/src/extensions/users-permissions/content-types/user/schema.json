{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Users for authentication and content interactions"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "users-permissions": {
      "advanced": {
        "defaultRole": "authenticated"
      }
    }
  },
  "attributes": {
    "resetPasswordToken": {
      "type": "string",
      "configurable": false
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false
    },
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "required": false,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "provider": {
      "type": "string"
    },
    "password": {
      "type": "password",
      "private": true,
      "minLength": 6
    },
    "confirmed": {
      "type": "boolean",
      "default": false
    },
    "blocked": {
      "type": "boolean",
      "default": false
    },
    "fullName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 40
    },
    "profilePic": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "accountStatus": {
      "type": "enumeration",
      "default": "active",
      "enum": [
        "active",
        "banned"
      ]
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role"
    }
  }
}
